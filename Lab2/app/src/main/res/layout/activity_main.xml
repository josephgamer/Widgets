<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/light_blue_900">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenid@"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="80dp" android:id="@+id/txtBienvenido"
            android:textSize="30sp"
            android:textStyle="bold"/>
    <Button
            android:text="Siguiente"
            android:layout_width="135dp"
            android:layout_height="61dp" android:id="@+id/btnSiguiente"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="432dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="136dp"/>
    <TextView
            android:text="Ir a la Siguiente pantalla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/txtBienvenido"
            android:layout_marginTop="120dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp" android:textSize="20sp"
            android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>